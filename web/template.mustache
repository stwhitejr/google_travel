{{#locations}}
  {{^is_control}}
    <div class="flex_box">
      <div class="col">
        <div class="Location">
          <div class="Location-name">
            {{name}}
          </div>
          {{#recording_times}}
            <div class="Location-recordings">
              <div class="Location-recordingTime">
                {{departure_time}}
              </div>
              <table class="LocationData">
                <tr>
                  <th>Date</th>
                  <th>Travel w/ Traffic</th>
                  <th>Travel w/o Traffic</th>
                  <th>Distance</th>
                  <th>Via</th>
                </tr>
                {{#recordings}}
                  <tr data-recording-id="{{id}}" class="LocationData-row">
                    <td>{{date}}</td>
                    <td>{{duration_in_traffic}}</td>
                    <td>{{duration}}</td>
                    <td>{{distance}}</td>
                    <td>{{via}}</td>
                  </tr>
                {{/recordings}}
              </table>
            </div>
          {{/recording_times}}
        </div>
      </div>
      <div class="col">
        {{#locations.0}}
          <div class="Location">
            <div class="Location-name">
              {{name}}
            </div>
            {{#recording_times}}
              <div class="Location-recordings">
                <div class="Location-recordingTime">
                  {{departure_time}}
                </div>
                <table class="LocationData">
                  <tr>
                    <th>Date</th>
                    <th>Travel w/ Traffic</th>
                    <th>Travel w/o Traffic</th>
                    <th>Distance</th>
                    <th>Via</th>
                  </tr>
                  {{#recordings}}
                    <tr data-recording-id="{{id}}" class="LocationData-row">
                      <td>{{date}}</td>
                      <td>{{duration_in_traffic}}</td>
                      <td>{{duration}}</td>
                      <td>{{distance}}</td>
                      <td>{{via}}</td>
                    </tr>
                  {{/recordings}}
                </table>
              </div>
            {{/recording_times}}
          </div>
        {{/locations.0}}
      </div>
    </div>
  {{/is_control}}
{{/locations}}